{
    "compilerOptions": {
        "lib": [ "es2018", "es2017", "es7", "es6", "dom" ],
        "target": "es5",
        "module": "commonjs",
        "allowJs": false,
        "downlevelIteration": true,
        "declaration": true,
        "outDir": "./lib",
        // "strict": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/*.ts", "src/jQuery.js",
    ],
    "exclude": [
        "./lib/**/*",
        "./src/util/**/*",
        "./*.js",
        "**/*/__tests__",
        "node_modules/**/*"
    ]
}